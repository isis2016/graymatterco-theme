{% style %}
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color:{{section.settings.bgcolor}};
    }

    @media screen and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        padding-top: {{ section.settings.mobile_padding_top }}px;
        padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }


  /* Science Hero Section CSS */
  .science-content {
      flex: 0 0 auto;
      width: 65%;
      padding:0px 15px;
      padding-right:50px;
  }
  .science-img-sec{
      flex: 0 0 auto;
      padding:0px 15px;
      width: 35%;
      position: relative;
  }
  .science-img-sec::after {
    content: "";
    position: absolute;
    background-image: url('https://cdn.shopify.com/s/files/1/0606/9773/9516/files/Group_1000004050_f8d5cdb8-cf1b-45f5-82f7-dc823e6419e2.png?v=1727082113');
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: contain;
    bottom: -110px;
    right: -75px;
    max-width: 481px;
    max-height: 502px;
    top: auto;
  }
  .science-content .science_wel_text {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      border-bottom: 1px solid #000;
      padding-bottom: 30px;
      margin-bottom: 30px;
  }
  .science-content .science_wel_text .sub_title{
      font-family: ABC Monument Grotesk Mono Unlicensed Trial;
      font-weight: 300;
      font-size: 16px;
      line-height: 24px;
      text-transform: uppercase;
      margin: 0;
  }
  .science-content .science_wel_text .sec_title {
      font-family: 'Exposure[+40]';
      font-size: 40px;
      line-height: 48px;
      font-weight: 500;
      margin: 0;
  }
  .science-content .science_wel_text .sec_description p,
  .science-content .science_second_row .info_box .info_desc p,
    .science-content .science_third_row .info_box .info_desc p{
      font-family: ABC Monument Grotesk Mono Unlicensed Trial;
      font-weight: 400;
      font-size: 18px;
      line-height: 26px;
      margin: 0;
  }
  .science_third_row .info_box.col-md-6 {
    position: relative;
    z-index: 1;
  }
  .science_third_row .info_box.col-md-6:nth-last-child(odd) {
    width: 100%;
    text-align: center;
  }
  .science-content .science_second_row{
      border-bottom: 1px solid #000;
      padding-bottom: 30px;
      margin-bottom: 30px;
  }
  .science-content .science_second_row .ssr_title ,
    .science-content .science_third_row .ssr_title {
      font-family: 'Exposure[+37]';
      font-weight: 500;
      font-size: 27px;
      line-height: 37px;
      margin: 0px 0px 20px;
  }

  .science-content .science_second_row .info_box ,
    .science-content .science_third_row .info_box {
      display: flex;
      flex-direction: column;
      gap: 10px;
  }
  .science-content .science_second_row .info_box .info_title,
    .science-content .science_third_row .info_box .info_title{
    font-family: 'Exposure[+40]';
    font-weight: 500;
    font-size:50px;
    line-height:60px;
    color: #8aa665;
  }
  .product_img_wrapper {
    position: sticky;
    top: 30px;
    z-index: 1;
  }
  .science-img-sec .product_img,
  .science-img-sec .product_ingredients_img{
    border-radius: 30px;
    overflow: hidden;
    margin-bottom: 30px;
    background: #DBE5F4;
    padding: 20px;
  }
  .science-img-sec .product_ingredients_img{
    padding:40px 50px;
    margin: 0px;
  }
  @media screen and (max-width:1400px){
    .science-img-sec::after {
      right: -45px;
      bottom: -170px;
    }
  }
  @media screen and (max-width:1200px){
    .science-img-sec::after {
      right: -5px;
      bottom: -90px;
    }
  }
  @media screen and (max-width:1024px){
    .science-content{
      width: 55%;
      padding-right:30px;
    }
    .science-img-sec{
      flex: 0 0 auto;
      width: 45%;
    }
    .science-img-sec .product_img,
    .science-img-sec .product_ingredients_img{
      border-radius:20px;
    }
    .science-img-sec .product_img{
      padding:10px;
    }
    .science-img-sec .product_ingredients_img {
      padding: 20px 30px 15px;
    }
  }
  @media screen and (max-width:992px){
    .science-content .science_second_row .info_box .info_title, .science-content .science_third_row .info_box .info_title {
      font-size: 40px;
      line-height: 40px;
    }
    .science-content .science_wel_text .sec_description p, .science-content .science_second_row .info_box .info_desc p, .science-content .science_third_row .info_box .info_desc p {
      font-size: 14px;
      line-height: 20px;
    }
  }
  @media screen and (max-width:767px){
    .science-img-sec::after {
      right: 0;
      top: -15%;
      bottom: inherit;
      max-width: 300px;
      max-height: 300px;
      transform: rotate(180deg);
    }
    .science-content {
      width: 100%;
      padding: 0px 15px;
      margin-bottom: 30px;
    }
    .science-img-sec{
      flex: 0 0 auto;
      width: 100%;
    }
    .science-content .science_wel_text .sec_title {
      font-size: 28px;
      line-height: 34px;
    }
    .science-content .science_wel_text .sec_description p, .science-content .science_second_row .info_box .info_desc p, .science-content .science_third_row .info_box .info_desc p {
      font-size: 14px;
      line-height: 22px;
    }
    .science-content .science_wel_text {
      padding-bottom: 30px;
      margin-bottom: 30px;
    }
    .science-content .science_second_row .ssr_title, .science-content .science_third_row .ssr_title {
      font-size: 24px;
      line-height: normal;
      margin: 0px 0px 20px;
    }
    .science-content .science_second_row .info_box, .science-content .science_third_row .info_box {
      gap: 10px;
    }
    .science-content .science_second_row .info_box .info_title, .science-content .science_third_row .info_box .info_title {
      /* font-size: 38px;
      line-height: 44px; */
      font-size: 30px;
      line-height: 40px;
    }
    .science-img-sec .product_img {
      padding: 10px;
    }
    .science-img-sec .product_ingredients_img {
      padding: 30px;
    }
  }
{% endstyle %}

<div class="container">
  <div class="row">
    <div class="science-content">
      <div class="science_wel_text">
        <span class="sub_title">{{ section.settings.sub_title }}</span>
        <h1 class="sec_title">{{ section.settings.sectitle }}</h1>
        <div class="sec_description">{{ section.settings.sec_description }}</div>
      </div>
      <div class="science_second_row">
        <h3 class="ssr_title">{{ section.settings.product_info_title }}</h3>
        <div class="row">
          {% for block in section.blocks %}
            {% if block.type == 'Productinfobox' %}
              {% if block.settings.info_title != blank or block.settings.info_desc %}
                <div class="info_box col-md-6" id="block-{{ block.id }}">
                  <h3 class="info_title">
                    {{ block.settings.info_title }}
                  </h3>
                  <div class="info_desc">{{ block.settings.info_desc }}</div>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="science_third_row">
        <div class="row">
          {% for block in section.blocks %}
            {% if block.type == 'ThirdRowInfobox' %}
              {% if block.settings.info_title != blank or block.settings.info_desc %}
                <div class="info_box col-md-6" id="block-{{ block.id }}">
                  <h3 class="info_title">
                    {{ block.settings.info_title }}
                  </h3>
                  <div class="info_desc">{{ block.settings.info_desc }}</div>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="science-img-sec">
      <div class="product_img_wrapper">
        <div class="product_img">
        {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
        {% assign class = 'img-fluid' %}
        {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
        {{
          section.settings.science_img
          | image_url: width: 1500
          | image_tag: sizes: sizes, widths: widths, class: class
        }}
      </div>
        <div class="product_ingredients_img">
        {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
        {% assign class = 'img-fluid' %}
        {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
        {{
          section.settings.science_img_ingredients
          | image_url: width: 1500
          | image_tag: sizes: sizes, widths: widths, class: class
        }}
      </div>
      </div>
    </div>
  </div>
</div>

<style>
  {% for block in section.blocks %}
    #block-{{ block.id }} .info_desc p {
      font-size: {{ block.settings.font-size }}px
    }
    @media screen and (max-width: 767px) {
      #block-{{ block.id }} .info_desc p {
        font-size: {{ block.settings.font-size | divided_by: 1.3 }}px
      }
    }
  {% endfor %}
</style>

