      {
        "type": "image_picker",
        "id": "left-image",
        "label": "Left Image"
      },
      {
        "type": "image_picker",
        "id": "right-image",
        "label": "Right Image"
      },
      {
        "type": "image_picker",
        "id": "left-image-mobile",
        "label": "Left Image Mobile"
