        "default": 74
      },
      {
        "type": "range",
        "id": "padding-top-mobile",
        "label": "Padding Top Mobile",
        "min": 0,
        "max": 100,
        "step": 2,
        "default": 60
      },
      {
        "type": "range",
        "id": "padding-bottom-mobile",
        "label": "Padding Bottom Mobile",
        "min": 0,
        "max": 100,
        "step": 2,
        "default": 60
      }
    ],
    "presets": [
      {
        "name": "Become Member"
      }
    ]
  }
{% endschema %}