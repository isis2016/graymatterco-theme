    font-size: 50px;
    text-align: center;
    line-height: 60px;
    font-family: 'Exposure[+40]';
    font-weight: 500;
} 
.product_detailed_section .pgd_tag {
  display: inline-block;
  border-radius: 50px;
  padding: 5px 15px;
  margin-top: 10px;
}
.product_detailed_section .pgd_tag .pgd_name-block {
  font-family: 'ABC Monument Grotesk Mono';
  text-transform: uppercase;
  font-size: 16px;
  font-weight: 500;
}
.pgd_inner_col {
    position: relative;
    display: block;
    overflow: hidden;
    background:var(--color3);
    border-radius:20px;
    -webkit-border-radius:20px;
    -moz-border-radius:20px;
    -ms-border-radius:20px;
    -o-border-radius:20px;
    padding: 24px 24px 38px;
}
.pgd_top, .popup_close_wrap {
    position: absolute;
    right: 23px;
    top: 23px;
    width: 78px;
    height:78px;
    z-index:2;
}
.popup_close_wrap {
    top:0;
    right:0;
}
.pgd_top a, .popup_close_wrap a {
    width:100%;
    height:100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 0px 0px 0px 20px;
    -webkit-border-radius: 0px 0px 0px 20px;
    -moz-border-radius: 0px 0px 0px 20px;
    -ms-border-radius: 0px 0px 0px 20px;
    -o-border-radius: 0px 0px 0px 20px;
    background-color:var(--color3);
}
.pgd_top a svg path {
    transition:0.3s all ease-in-out;
    -webkit-transition:0.3s all ease-in-out;
    -moz-transition:0.3s all ease-in-out;
    -ms-transition:0.3s all ease-in-out;
    -o-transition:0.3s all ease-in-out;
}
.pgd_top a:hover svg path {
    fill: var(--color2);
}
.pgd_center_img, .popup_image_col {
    position: relative;
    display: block;
    overflow: hidden;
    padding-bottom:72.5%;
    border-radius:20px;
    -webkit-border-radius:20px;
    -moz-border-radius:20px;
    -ms-border-radius:20px;
    -o-border-radius:20px;
}
.pgd_center_img img, .popup_image_col img {
    width:100%;
    height:100%;
    object-fit: cover;
    left:0;
    top:0;
    position: absolute;
}
.pgd_center {
    padding:0 0 37px 0;
}
.pgd_name .pgd_name-block {
    font:normal 400 30px/148.3% var(--primary-font);
}
