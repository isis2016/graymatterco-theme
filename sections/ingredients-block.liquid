<script>
document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll(".pgd_top").forEach(function(element) {
    element.addEventListener("click", function() {
        this.closest(".product_detailed_col").classList.add("is-open");
        document.body.classList.add("overflow_hidden");
    });
  });

  document.querySelectorAll(".popup_close_wrap").forEach(function(element) {
    element.addEventListener("click", function() {
        this.closest(".product_detailed_col").classList.remove("is-open");
        document.body.classList.remove("overflow_hidden");
    });
  });





  document.addEventListener('click', function(event) {
  // Check if the click target is within the product_popup_inner
  if (!event.target.closest('.product_popup_inner')) {
    // Remove the class is-open from product_detailed_col
    document.querySelectorAll('.product_detailed_col').forEach(function(element) {
      element.classList.remove('is-open');
      document.body.classList.remove("overflow_hidden");
    });
  }
});

// Handle clicks on pgd_top to open the product detail column
document.querySelectorAll('.pgd_top').forEach(function(element) {
  element.addEventListener('click', function(event) {
    // Prevent the click event from bubbling up to the document
    event.stopPropagation();
    
    // Add the class is-open to the closest product_detailed_col
    let productDetailedCol = this.closest('.product_detailed_col');
    if (productDetailedCol) {
      productDetailedCol.classList.add('is-open');
      document.body.classList.add("overflow_hidden");
    }
  });
});



  /* View More Functionality */
if (window.innerWidth <= 767) {  
  const items_data = document.querySelectorAll('.section-{{ section.id }} .product_detailed_col');
  const viewMoreBtn = document.querySelector('.view_more_btn');
  const itemsPerPage = 16;
  let currentPage = 1;
  
  // Function to show items
  function showItems() {
      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;
      console.log(end)
  
      items_data.forEach((item, index) => {
          // Show items for the current page
          if (index < end) {
              item.style.display = 'block'; // Show the items for the current page
          } else {
              item.style.display = 'none'; // Hide items that are not in the current page range
          }
      });
  
      // Hide the button if all items are displayed
      if (end >= items_data.length) {
          viewMoreBtn.style.display = 'none';
      } else {
          viewMoreBtn.style.display = 'block'; // Show the button if more items are available
      }
  }
  
  // Event listener for the "View More" button
  viewMoreBtn.addEventListener('click', function (e) {
      e.preventDefault();
      currentPage++;
      showItems();
  });
  
  // Initialize display
  showItems();

  window.addEventListener('resize', function() {
    showItems.update();
  });
  
  }
  
  });

</script>

