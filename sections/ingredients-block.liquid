{% style %}
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding-top }}px;
      padding-bottom: {{ section.settings.padding-bottom }}px;
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
    }
    .section-{{ section.id }} .container {
      background-color: {{ section.settings.bg_color }};
    }
    .section-{{ section.id }} .pgd_inner_col,
    .section-{{ section.id }} .pgd_inner_col a {
      background-color: {{ section.settings.box_bg_color }};
    }
    .section-{{ section.id }} .pgd_tag {
      background-color: {{ section.settings.tag_bg_color }};
      color: {{ section.settings.tag_text_color }};
      border: 1px solid {{section.settings.tag_text_color}};
    }
    .section-{{ section.id }} .product_grid_popup {
      background-color: {{ section.settings.popup_bg_color }};
    }
    @media only screen and (max-width: 767px) {
      .section-{{ section.id }} {
        padding-top: {{ section.settings.mobile-padding-top }}px;
        padding-bottom: {{ section.settings.mobile-padding-bottom }}px;
      }
    }
{% endstyle %}

<div class="section-{{ section.id }}" id="sec-{{ forloop.index }}" > 

  <section class="product_detailed_section">
      <div class="container">
          <div class="main_ingredient">
            {% if section.settings.ingredient_main_title != blank %}
              <h2 class="title">{{ section.settings.ingredient_main_title }}</h2>
            {% endif %}
          </div>
        
          <div class="product_detailed_row flex">
            
            {% for block in section.blocks %}
                 {% if block.type == 'ingredient' %}
                   {% if block.settings.ingredient_img != blank or block.settings.ingredient_title != blank %}
                  <div class="product_detailed_col">
                  <div class="product_detailed_inner">
                      <div class="product_grid_detailed">
                          <div class="pgd_inner_col">
                              <div class="pgd_top">
                                  <a href="#">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="31" height="31" viewBox="0 0 31 31" fill="none">
                                          <path fill-rule="evenodd" clip-rule="evenodd" d="M17.5 0.00878906H13.5V13.5088H0V17.5088H13.5V31.0088H17.5V17.5088H31V13.5088H17.5V0.00878906Z" fill="#7197C3"/>
                                      </svg>
                                  </a>
                              </div>
                              <div class="pgd_center">
                                  {% if block.settings.ingredient_img != blank %}
                                    <div class="pgd_center_img">
                                      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                                      {% assign class = 'img-fluid' %}
                                      {%- capture sizes -%}
                                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                                      {%- endcapture -%}
                                      {{
                                        block.settings.ingredient_img
                                        | image_url: width: 1500
                                        | image_tag: sizes: sizes, widths: widths, class: class
                                      }}
                                    </div>
                                  {% endif %}
                              </div>
                              {% if block.settings.ingredient_title != blank %}                                          
                                <div class="pgd_name">
                                  <div class="pgd_name-block">{{ block.settings.ingredient_title }}</div>
                                </div>
                              {% endif %}

                              {% if block.settings.ingredient_tag != blank %}              
                                 <div class="pgd_tag">
                                    <div class="pgd_name-block">{{ block.settings.ingredient_tag }}</div>
                                 </div>
                              {% endif %}  
                          </div>
                      </div>
                   
                      <div class="product_grid_popup">
                          <div class="product_popup_inner">
                              <div  class="product_popup_col">
                                  <div class="product_close_image">
                                      <div class="popup_close_wrap">
                                          <a href="#">
                                              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M24.8744 2.95396L22.0459 0.125531L12.5 9.67147L2.95406 0.125531L0.125632 2.95396L9.67157 12.4999L0.125632 22.0458L2.95406 24.8743L12.5 15.3283L22.0459 24.8743L24.8744 22.0458L15.3284 12.4999L24.8744 2.95396Z" fill="#7197C3"/></svg>
                                          </a>
                                      </div>
                                      <div class="popup_image">
                                          <div class="popup_image_col">
                                              {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                                              {% assign class = 'img-fluid' %}
                                              {%- capture sizes -%}
                                                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                                                (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                                              {%- endcapture -%}
                                              {{
                                                block.settings.ingredient_img
                                                | image_url: width: 1500
                                                | image_tag: sizes: sizes, widths: widths, class: class
                                              }}
                                          </div>
                                      </div>
                                  </div>
                   
                                  {% comment %}<div class="product_popup_details">
                                      <div class="popup_details_top">
                                          <h3>What are nootropics?</h3>
                                          <p>Also known as “smart drugs” are powerful natural compounds that boost cognition and productivity. They help enhance mood, motivation, clear brain fog, increase focus, and improve reaction time.</p>
                                          <p>The impacts of long term nootropic supplementation compound overtime. Results are improved composition of brain health by providing the building blocks needed for increased synapse connections.</p>
                                      </div>
                                      <div class="popup_details_bottom">
                                          <h6>Key Focus Areas</h6>
                                          <ul>
                                              <li>Enhance Mood</li>
                                              <li>Motivation</li>
                                              <li>Clear Brain Fog</li>
                                              <li>Increase Focus</li>
                                              <li>Improve reaction time</li>
                                          </ul>
                                      </div>
                                  </div> {% endcomment %}

                                                
                                  <div class="product_popup_details">  
                                    {% if block.settings.popup_title != blank and block.settings.popup_desc != blank %}
                                      <div class="popup_details_top">
                                        <h3>{{ block.settings.popup_title }}</h3>
                                        <div class="popup_desc">
                                          {{ block.settings.popup_desc }}
                                        </div>
                                      </div>
                                    {% endif %}
                                    {% if block.settings.popup_bottom_title != blank and block.settings.popup_bottom_desc != blank %}
                                    <div class="popup_details_bottom">
                                     <h6>{{ block.settings.popup_bottom_title }}</h6>
                                    {{ block.settings.popup_bottom_desc }}
                                    </div>
                                    {% endif %}
                                  </div>
                                  {% comment %} {{ block.settings.popup_description }} {% endcomment %}
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
                 {% endif %}
               {% endif %}                                  
            {% endfor %}
                                                
                                                
             {% comment %} <div class="product_detailed_col">
                  <div class="product_detailed_inner">
                      <div class="product_grid_detailed">
                          <div class="pgd_inner_col">
                              <div class="pgd_top">
                                  <a href="#">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="31" height="31" viewBox="0 0 31 31" fill="none">
                                          <path fill-rule="evenodd" clip-rule="evenodd" d="M17.5 0.00878906H13.5V13.5088H0V17.5088H13.5V31.0088H17.5V17.5088H31V13.5088H17.5V0.00878906Z" fill="#7197C3"/>
                                      </svg>
                                  </a>
                              </div>
                              <div class="pgd_center">
                                  <div class="pgd_center_img">
                                      <img src="./images/product-img-1.jpg" alt="product-img-1">
                                  </div>
                              </div>
                              <div class="pgd_name">
                                  <h6>What are nootropics?</h6>
                              </div>
                          </div>
                      </div>
                      <div class="product_grid_popup">
                          <div class="product_popup_inner">
                              <div  class="product_popup_col">
                                  <div class="product_close_image">
                                      <div class="popup_close_wrap">
                                          <a href="#">
                                              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M24.8744 2.95396L22.0459 0.125531L12.5 9.67147L2.95406 0.125531L0.125632 2.95396L9.67157 12.4999L0.125632 22.0458L2.95406 24.8743L12.5 15.3283L22.0459 24.8743L24.8744 22.0458L15.3284 12.4999L24.8744 2.95396Z" fill="#7197C3"/></svg>
                                          </a>
                                      </div>
                                      <div class="popup_image">
                                          <div class="popup_image_col">
                                              <img src="./images/product-img-1.jpg" alt="product-img-1">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="product_popup_details">
                                      <div class="popup_details_top">
                                          <h3>What are nootropics?</h3>
                                          <p>Also known as “smart drugs” are powerful natural compounds that boost cognition and productivity. They help enhance mood, motivation, clear brain fog, increase focus, and improve reaction time.</p>
                                          <p>The impacts of long term nootropic supplementation compound overtime. Results are improved composition of brain health by providing the building blocks needed for increased synapse connections.</p>
                                      </div>
                                      <div class="popup_details_bottom">
                                          <h6>Key Focus Areas</h6>
                                          <ul>
                                              <li>Enhance Mood</li>
                                              <li>Motivation</li>
                                              <li>Clear Brain Fog</li>
                                              <li>Increase Focus</li>
                                              <li>Improve reaction time</li>
                                          </ul>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div> {% endcomment %}
                                      
          </div>
                                                {% if section.settings.loadmore_btn_text != blank %}                                      
             <button class="btn view_more_btn">{{ section.settings.loadmore_btn_text }}</button>
            {% endif %}
      </div>
  </section>
</div>                                                
